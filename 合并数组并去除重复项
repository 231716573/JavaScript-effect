// 合并数组
var arr1 = [1,6,7,8];
var arr2 = [3,4,5,6,7];

Array.prototype.push.apply(arr1,arr2);
console.log(arr1); //[1, 6, 7, 8, 3, 4, 5, 6, 7]
	
	
// 去除重复项
function remove(arr){
	var tmp = {};
	for(var i in arr){
		if( tmp.indexOf(arr[i]) < 0 ){
			tmp.push(arr[i]);
		}
	}
	return tmp;
}
remove(arr1);  //[1, 6, 7, 8, 3, 4, 5]


// 排列顺序
var rank = remove(arr1).sort();
console.log(rank); //[1, 3, 4, 5, 6, 7, 8]

